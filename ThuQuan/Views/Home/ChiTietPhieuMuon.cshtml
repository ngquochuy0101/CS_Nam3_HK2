@model List<ChiTietMuon>
<link rel="stylesheet" href="~/css/style.css">

<h2>Chi tiết phiếu mượn #@ViewBag.IdPhieu</h2>
<style>
    body {
        background-color: #eceff1;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        margin: 0;
    }

    h2 {
        text-align: center;
        color: #007acc;
        font-size: 26px;
        margin-bottom: 30px;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        background-color: #ffffff;
        border: 1px solid #cce0ff;
        box-shadow: 0 4px 10px rgba(0, 122, 204, 0.1);
        border-radius: 8px;
        overflow: hidden;
    }

    th,
    td {
        border: 1px solid #cce0ff;
        padding: 10px 12px;
        text-align: left;
    }

    th {
        background-color: #e6f2ff;
        color: #007acc;
    }

    tr:nth-child(even) {
        background-color: #f9fcff;
    }

    tr:hover {
        background-color: #e0f0ff;
    }

    .action {
        text-align: center;
    }

    .action a,
    .back-link {
        display: block;
        text-align: center;
        margin-top: 30px;
        color: #007acc;
        text-decoration: none;
        font-weight: 500;
    }

    .action a:hover,
    .back-link:hover {
        color: #005fa3;
        text-decoration: underline;
    }

    .note {
        text-align: center;
        color: #333;
        font-size: 16px;
    }

    .footer {
        display: none;
    }
</style>

@if (Model.Count == 0)
{
    <p class="note">Không có dữ liệu chi tiết cho phiếu này.</p>
}
else
{
    <table>
        <thead>
            <tr>
                <th>Món đồ</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id_MonDo</td>
                </tr>
            }
        </tbody>
    </table>
}

<a href="/Home/DanhSachPhieuMuon" class="back-link">← Quay lại danh sách phiếu mượn</a>
<script src="~/js/index.js"></script>
