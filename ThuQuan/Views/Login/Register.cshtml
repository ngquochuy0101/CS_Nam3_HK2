@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="utf-8" />
    <title>Đăng ký</title>
    <style>
        /* Tổng thể body với nền xanh nhạt */
        body {
            background-color: #f0f8ff;
            /* Màu xanh nhạt (AliceBlue) */
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        /* Hộp chứa form đăng ký */
        .container {
            max-width: 400px;
            margin: 80px auto;
            padding: 20px;
            background-color: #ffffff;
            /* Màu trắng */
            border: 1px solid #cce0ff;
            /* Viền xanh nhạt */
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        }

        /* Tiêu đề của trang đăng ký */
        h2 {
            text-align: center;
            color: #007acc;
            /* Màu xanh đậm */
            margin-bottom: 20px;
        }

        /* Cấu hình form với flex layout */
        form {
            display: flex;
            flex-direction: column;
        }

        /* Nhãn (label) */
        label {
            margin-top: 10px;
            color: #333;
        }

        /* Các input cho text, email, password */
        input[type="text"],
        input[type="email"],
        input[type="password"] {
            padding: 8px;
            margin-top: 5px;
            border: 1px solid #cce0ff;
            border-radius: 4px;
        }

        /* Nút submit */
        input[type="submit"] {
            margin-top: 20px;
            padding: 10px;
            background-color: #007acc;
            color: #fff;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        /* Hiệu ứng hover cho nút */
        input[type="submit"]:hover {
            background-color: #005fa3;
        }

        .footer {
            display: none
        }
    </style>
</head>

<body>
    <div class="container">
        <h2>Đăng ký</h2>
        @if (TempData["ErrorMessage"] != null)
        {
            <div style="color: red; text-align:center; margin-bottom:10px;">
                @TempData["ErrorMessage"]
            </div>
        }
        @if (TempData["SuccessMessage"] != null)
        {
            <div style="color: green; text-align:center; margin-bottom:10px;">
                @TempData["SuccessMessage"]
            </div>
        }

        <form method="post" asp-controller="Login" asp-action="Register">
            <label for="username">Tên đăng nhập</label>
            <input type="text" id="username" name="username" required />

            <label for="email">Email</label>
            <input type="email" id="email" name="email" required />

            <label for="password">Mật khẩu</label>
            <input type="password" id="password" name="password" required />

            <label for="confirmPassword">Xác nhận mật khẩu</label>
            <input type="password" id="confirmPassword" name="confirmPassword" required />

            <input type="submit" value="Đăng ký" />
            <p style="text-align: center; margin-top: 10px;">
                Đã có tài khoản? <a href="/Login" style="color: #007acc; text-decoration: none;">Đăng nhập</a>
            </p>

        </form>
    </div>
</body>

</html>
